<%= simple_form_for cash, :remote => true do |f| %>
  <%= f.input :name, :input_html => { :class => :cash_name } %>
  <%= f.input :sum, :as => :string, :input_html => { :class => :cash_sum, :value => ('%.2f' % cash.sum) } %>
  <%= f.submit %>

  <% unless cash.new_record? %>
    или 
    <%= link_to 'Удалить', cash, :method => :delete, :remote => true %>
  <% end %>
<% end %>
