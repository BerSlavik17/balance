<%= form_for resource, remote: true, html: { id: :item_form, class: 'b-form' } do |f| %>
  <div class="input-wrapper">
    <%= f.text_field :date, class: :date, value: resource.date %>
  </div>

  <div class="input-wrapper">
    <%= f.text_field :formula, class: :sum, placeholder: 'Сумма', autocomplete: :off, autofocus: true %>
  </div>
    
  <div class="input-wrapper">
    <%= f.select :category_id,
      grouped_options_for_select(Category.group_by_income, resource.category_id), {}, class: :category %>
  </div>
    
  <div class="input-wrapper">
    <%= f.text_field :description, class: :description, :placeholder => 'Описание' %>
  </div>
    
  <div class="input-wrapper">
    <%= f.submit 'Сохранить', class: :submit %>
    
    <% if resource.persisted? %>
      или
      <%= link_to 'Удалить', resource, method: :delete, remote: true, confirm: 'Вы уверенны?' %>
    <% end %>
  </div>
<% end %>
