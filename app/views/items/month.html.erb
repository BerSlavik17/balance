<%= render 'partials' %>

<table class="items">
  <thead>
    <tr>
      <% [:date, :sum, :category].each do |attr| %>
        <th><%= Item.human_attribute_name attr %></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td class="date"><%= link_to I18n.l(item.date), path_for(item) %></td>
        <td class="sum"><%= sum(item.sum) %></td>
        <td class="category"><%= item.category_name %></td>
      </tr>
    <% end %>
  </tbody>
</table>
