<tr class="row <%= item_counter.odd? ? :odd : :even %>">
  <td class="date"><%= link_to item.date, "/#{ item.year }/#{ item.month }/#{ item.day }", remote: true %></td>

  <td class="sum"><%= item.money %></td>
  
  <td class="category"><%= item.category_name %></td>

  <td><%= item.description %></td>
</tr>
