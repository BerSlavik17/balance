$('#edit_item').html('<%= escape_javascript(render 'form', { :item => @item }) %>').dialog({
  autoOpen: true,
  modal: true,
  title: 'Править запись',
  width: '890px',
  open: function() {
    $('#edit_item_summa').val('<%= '%.2f' % @item.sum %>').focus();
  }
})

$('#edit_item_date').datepicker();

